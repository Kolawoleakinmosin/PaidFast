<% if current_user.product.present? %>
  <h5>Here is Your Product Information</h5>
<% else %>
  <h5>Create A Product to start receiving payment</h5>
  <form action="/products" method="POST" data-turbo="false">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" name="commit" value="Create Stripe Account">
  </form>
<% end %>
