  <% if current_user.product.blank? %>
  <div class="container m-2">
    <h5>Create A Product to start receiving payment</h5>
    <%= simple_form_for @product, input_html: { class: 'form-control' } do |f| %>
    <%= f.input :name, label: 'Merchant Name'%>
    <%= f.input :photo, as: :file %>
    <%= f.input :description, label: 'Business Description' %>
    <%= f.button :submit, 'Get Started', class: 'submit'  %>
    <% end %>
  </div>

  <% else %>
  <%# <%= link_to 'Receive Payment', qr_code_path, class: "button-new" %>
  <a href="<%= qr_code_path %>">
  <button class="button-new">Receive Payment</button>
  </a>
  <% end %>
